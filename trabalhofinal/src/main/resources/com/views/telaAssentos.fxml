<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="900" style="-fx-background-color: #201f21;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="com.controllers.TelaAssentosController">
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 20px; -fx-background-color: #3c3b3d; -fx-border-width: 0 0 1 0;">
           <children>
               <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Onde Deseja Sentar?" textFill="WHITE" />
           </children>
        </HBox>
    </top>
    <center>
        <GridPane fx:id="gridAssentos" alignment="CENTER" hgap="12" style="-fx-padding: 40px;" vgap="12">
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20px; -fx-background-color: #3c3b3d; -fx-border-width: 1 0 0 0;">
           <children>
               
               <Button maxWidth="220" onAction="#confirmarAssentos" style="-fx-background-color: #e6455a; -fx-padding: 10 26; -fx-background-radius: 10;" text="Confirmar" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Button>
           </children>
        </HBox>
    </bottom>

</BorderPane>
